---
const {currentLocale, currentPath} = Astro.props;

// Generate alternate URL
function getAlternateUrl(path: string, targetLocale: string) {
    // Remove current locale prefix
    const pathWithoutLocale = path.replace(/^\/(fr|en)/, '');
    // Add target locale
    return `/${targetLocale}${pathWithoutLocale || '/'}`;
}

const frUrl = getAlternateUrl(currentPath, 'fr');
const enUrl = getAlternateUrl(currentPath, 'en');
