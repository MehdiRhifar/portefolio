---
import {useTranslations} from '../i18n/utils';

const {slug, title, desc, tech, company, locale = 'fr'} = Astro.props;
const t = useTranslations(locale);
---

<a href={`/${locale}/projects/${slug}`} class="card project-card">
  <div class="card-header">
    <h3>{title}</h3>
    {company && (
      <div class="company-badge">
        <span class="badge-icon">üè¢</span>
        {company}
      </div>
    )}
  </div>

  <div class="project-desc project-desc-list w-richtext">
    <ul role="list">
      {desc.map(item => <li>{item}</li>)}
    </ul>
  </div>

  <div class="card-footer">
    <div class="tech-section">
        <div class="mini-label-white">{t.projectDetail.technologies}</div>
      <div class="chips-container">
        {tech.slice(0, 4).map(techItem => <div class="single-chip">{techItem}</div>)}
        {tech.length > 4 && <div class="single-chip more-chip">+{tech.length - 4}</div>}
      </div>
    </div>
      <div class="view-more">{t.projects.viewDetails}</div>
  </div>
</a>

<style>
  .project-card {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    cursor: pointer;
    height: 100%;
  }

  .project-card:hover .view-more {
    color: #4a9eff;
  }

  .card-header {
    margin-bottom: 0.75rem;
  }

  .card-header h3 {
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .company-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.25rem 0.6rem;
    background: rgba(99, 102, 241, 0.15);
    border: 1px solid rgba(99, 102, 241, 0.3);
    border-radius: 4px;
    color: #a5b4fc;
    font-size: 0.7rem;
    font-weight: 500;
  }

  .badge-icon {
    font-size: 0.8rem;
  }

  .project-desc-list {
    flex: 1;
    font-size: 14px;
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 1rem;
  }

  .project-desc-list ul {
    margin: 0;
    padding-left: 2.5rem;
  }

  .project-desc-list li {
    margin-bottom: 0.35rem;
    font-size: 14px;
    line-height: 1.5;
  }

  .card-footer {
    margin-top: auto;
  }

  .tech-section {
    margin-bottom: 0.75rem;
  }

  .mini-label-white {
    font-size: 0.7rem;
    margin-bottom: 0.4rem;
    opacity: 0.7;
  }

  .chips-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .single-chip {
    font-size: 0.7rem;
    padding: 0.25rem 0.5rem;
  }

  .more-chip {
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.6);
    font-weight: 600;
  }

  .view-more {
    margin-top: 0.5rem;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
    transition: color 0.2s ease;
    font-weight: 500;
  }
</style>
