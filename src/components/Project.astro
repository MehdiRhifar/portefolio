---
const { slug, title, desc, tech, company } = Astro.props;
---

<a href={`/projects/${slug}`} class="single-item project-card">
  <h3>{title}</h3>
  {company && (
    <div class="company-badge">
      <span class="badge-icon">üè¢</span>
      {company}
    </div>
  )}
  <div class="project-desc project-desc-list w-richtext">
    <ul role="list">
      {desc.map(item => <li>{item}</li>)}
    </ul>
  </div>
  <div class="mini-label-white">Technologies &amp; tools</div>
  <div class="chips-container">
    {tech.map(techItem => <div class="single-chip">{techItem}</div>)}
  </div>
  <div class="view-more">View details ‚Üí</div>
</a>

<style>
  .project-card {
    text-decoration: none;
    color: inherit;
    display: block;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    cursor: pointer;
  }

  .project-card:hover {
    transform: translateY(-4px);
  }

  .project-card:hover .view-more {
    color: #4a9eff;
  }

  .view-more {
    margin-top: 1rem;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    transition: color 0.2s ease;
  }

  .company-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.25rem 0.6rem;
    background: rgba(99, 102, 241, 0.15);
    border: 1px solid rgba(99, 102, 241, 0.3);
    border-radius: 4px;
    color: #a5b4fc;
    font-size: 0.75rem;
    margin-top: 0.5rem;
    margin-bottom: 0.75rem;
    font-weight: 500;
  }

  .badge-icon {
    font-size: 0.85rem;
  }

  .project-desc-list {
    font-size: 16px;
    color: rgba(255, 255, 255, 0.9);
  }

  .project-desc-list li {
    margin-bottom: 0.4rem;
    font-size: 16px;
    line-height: 1.6;
  }

</style>
