</style>

<script>
    // Copier l'email au clic
    const emailCard = document.getElementById('email-card');
    if (emailCard) {
        emailCard.addEventListener('click', async () => {
            const email = emailCard.getAttribute('data-email');
            if (email) {
                try {
                    await navigator.clipboard.writeText(email);
                    const hint = emailCard.querySelector('.contact-card-hint');
                    if (hint) {
                        const originalText = hint.textContent;
                        hint.textContent = '‚úì Copi√© !';
                        emailCard.classList.add('copied');

                        setTimeout(() => {
                            hint.textContent = originalText;
                            emailCard.classList.remove('copied');
                        }, 2000);
                    }
                } catch (err) {
                    console.error('Erreur lors de la copie:', err);
                }
            }
        });
    }
</script>
