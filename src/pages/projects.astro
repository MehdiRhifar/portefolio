---
import { getCollection } from 'astro:content';
import Header from '../components/Header.astro';
import Project from '../components/Project.astro';
import Sidebar from '../components/Sidebar.astro';

// R√©cup√©rer tous les projets et les trier par ordre
const allProjects = (await getCollection('projects')).sort((a, b) => a.data.order - b.data.order);

// S√©parer les projets par cat√©gorie
const professionalProjects = allProjects.filter(p => p.data.category === 'professional');
const personalProjects = allProjects.filter(p => p.data.category === 'personal');
---

<!DOCTYPE html>
<html>
  <Header title="Projets | Mehdi Rhifar" />
  <body>
    <div class="content">
      <Sidebar selectedItem="projects" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block">
              <img src="/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
              <div>Retour</div>
            </a>
          </div>

          <div class="content-container">
            <div class="page-header">
              <h1>Mes Projets</h1>
              <p class="page-subtitle">
                Une s√©lection de projets professionnels et personnels qui illustrent mes comp√©tences techniques
                et ma passion pour le d√©veloppement logiciel.
              </p>
            </div>

            <!-- Projets Professionnels -->
            {professionalProjects.length > 0 && (
              <section class="items-container">
                <div class="section-title-container">
                  <h2 class="section-title">Projets Professionnels</h2>
                  <span class="category-badge pro-badge">üíº {professionalProjects.length} projet{professionalProjects.length > 1 ? 's' : ''}</span>
                </div>
                <p class="section-description">
                  Projets r√©alis√©s en entreprise dans le cadre de missions professionnelles
                </p>
                <div class="resource-items">
                  {professionalProjects.map(project => (
                    <Project
                      slug={project.slug}
                      title={project.data.title}
                      desc={project.data.shortDesc}
                      tech={project.data.tech}
                      company={project.data.company}
                    />
                  ))}
                </div>
              </section>
            )}

            <!-- Projets Personnels -->
            {personalProjects.length > 0 && (
              <section class="items-container">
                <div class="section-title-container">
                  <h2 class="section-title">Projets Personnels</h2>
                  <span class="category-badge personal-badge">‚ö° {personalProjects.length} projet{personalProjects.length > 1 ? 's' : ''}</span>
                </div>
                <p class="section-description">
                  Projets open-source et exp√©rimentations personnelles
                </p>
                <div class="resource-items">
                  {personalProjects.map(project => (
                    <Project
                      slug={project.slug}
                      title={project.data.title}
                      desc={project.data.shortDesc}
                      tech={project.data.tech}
                      company={project.data.company}
                    />
                  ))}
                </div>
              </section>
            )}
          </div>
        </div>
      </nav>
    </div>
  </body>
</html>

<style>
  .container {
    max-width: 1200px;
  }

  .page-header {
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #fff 0%, rgba(255, 255, 255, 0.8) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-subtitle {
    font-size: 1.1rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.65);
    max-width: 700px;
  }

  .items-container {
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .items-container:last-child {
    border-bottom: none;
  }

  .section-title-container {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }

  .section-title {
    font-size: 1.85rem;
    color: #fff;
    margin: 0;
    font-weight: 700;
  }

  .section-description {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 2rem;
    margin-top: 0;
  }

  .category-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.35rem 0.85rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .pro-badge {
    //background: var(--gradient-primary));
    border: 1px solid var(--color-primary-light);
    color: var(--color-primary);
  }

  .personal-badge {
    //background: linear-gradient(135deg, rgba(34, 197, 94, 0.2) 0%, rgba(59, 130, 246, 0.2) 100%);
    border: 1px solid rgba(34, 197, 94, 0.4);
    color: #86efac;
  }

  .resource-items {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .page-subtitle {
      font-size: 1rem;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .resource-items {
      grid-template-columns: 1fr;
    }

    .section-title-container {
      flex-wrap: wrap;
    }
  }

  @media (min-width: 1400px) {
    .resource-items {
      grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    }
  }
</style>
